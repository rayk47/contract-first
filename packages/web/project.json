{
  "name": "@contract-first/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project @contract-first/web --web",
  "targets": {
    "copy-openapi-yaml": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cpx packages/api/src/lib/openapi.yaml packages/web/public"
      }
    },
    "build": {
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        },
        "typecheck",
        "copy-openapi-yaml"
      ]
    }
  },
  "implicitDependencies": [
    "api"
  ]
}