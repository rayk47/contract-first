{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}